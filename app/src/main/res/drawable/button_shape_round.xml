<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8EC5FC" />
            <gradient
                android:angle="-90"
                android:startColor="#345953"
                android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8EC5FC" />
            <solid android:color="#8EC5FC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8EC5FC" />
            <gradient android:angle="-90" android:startColor="#8EC5FC" android:endColor="#8EC5FC" />
        </shape>
    </item>
</selector>